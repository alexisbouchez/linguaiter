{
  "name": "lingua",
  "displayName": "Lingua",
  "description": "Language support for Lingua (.lingua files)",
  "version": "0.1.0",
  "publisher": "lingua",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lingua"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lingua",
        "aliases": [
          "Lingua",
          "lingua"
        ],
        "extensions": [
          ".lingua"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lingua",
        "scopeName": "source.lingua",
        "path": "./syntaxes/lingua.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
